{
  "name": "beguile",
  "displayName": "Beguile",
  "description": "Full Feature Guile Scheme VS Code Extension",
  "version": "0.1.0",
  "publisher": "GigiaJ",
  "repository": {
    "type": "git",
    "url": "https://github.com/GigiaJ/beguile"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:scheme"
  ],
  "main": "./out/extension.js",
  "files": [
    "out",
    "resources",
    "node_modules",
    "guile",
    "package.json",
    "language-configuration.json",
    "README.md",
    "LICENSE"
  ],
  "configuration": {
    "title": "Beguile",
    "properties": {
      "beguile.guileCommand": {
        "type": "string",
        "default": "guile",
        "description": "Command to start the Guile server. On Guix, try: 'guix shell guile guile-json -- guile'"
      }
    }
  },
  "extensionKind": [
    "workspace"
  ],
  "contributes": {
    "languages": [
      {
        "id": "scheme",
        "configuration": "./language-configuration.json",
        "configurationDefaults": {
          "[scheme]": {
            "editor.matchBrackets": "never"
          }
        },
        "extensions": [
          ".scm",
          ".ss"
        ],
        "aliases": [
          "Scheme",
          "guile"
        ],
        "assets": [
          "./resources/tree-sitter-scheme.wasm"
        ]
      }
    ],
    "commands": [
      {
        "command": "beguile.restartServer",
        "title": "Guile: Restart Server"
      },
      {
        "command": "beguile.eval",
        "title": "Beguile: Evaluate Selection / Top Level Form"
      },
      {
        "command": "beguile.formatDocument",
        "title": "Beguile: Format Document"
      },
      {
        "command": "beguile.paredit.slurpForward",
        "title": "Paredit: Slurp Forward"
      },
      {
        "command": "beguile.paredit.barfForward",
        "title": "Paredit: Barf Forward"
      },
      {
        "command": "beguile.paredit.wrap",
        "title": "Paredit: Wrap Selection"
      },
      {
        "command": "beguile.forwardSexp",
        "title": "Beguile: Move Forward S-Expression"
      },
      {
        "command": "beguile.backwardSexp",
        "title": "Beguile: Move Backward S-Expression"
      },
      {
        "command": "beguile.paredit.splice",
        "title": "Paredit: Splice S-expression"
      },
      {
        "command": "beguile.selectForwardSexp",
        "title": "Paredit: Select Forward S-Expression"
      },
      {
        "command": "beguile.selectBackwardSexp",
        "title": "Paredit: Select Backward S-Expression"
      }
    ],
    "keybindings": [
      {
        "command": "beguile.forwardSexp",
        "key": "ctrl+right",
        "mac": "alt+right",
        "when": "editorTextFocus && editorLangId == scheme"
      },
      {
        "command": "beguile.backwardSexp",
        "key": "ctrl+left",
        "mac": "alt+left",
        "when": "editorTextFocus && editorLangId == scheme"
      },
      {
        "command": "beguile.paredit.slurpForward",
        "key": "ctrl+alt+right",
        "mac": "ctrl+alt+right",
        "when": "editorTextFocus && editorLangId == scheme"
      },
      {
        "command": "beguile.paredit.barfForward",
        "key": "ctrl+alt+left",
        "mac": "ctrl+alt+left",
        "when": "editorTextFocus && editorLangId == scheme"
      },
      {
        "command": "beguile.paredit.wrap",
        "key": "ctrl+shift+9",
        "when": "editorTextFocus && editorLangId == scheme"
      },
      {
        "command": "beguile.paredit.splice",
        "key": "alt+s",
        "mac": "alt+s",
        "when": "editorTextFocus && editorLangId == scheme"
      },
      {
        "command": "beguile.selectForwardSexp",
        "key": "ctrl+shift+right",
        "mac": "alt+shift+right",
        "when": "editorTextFocus && editorLangId == scheme"
      },
      {
        "command": "beguile.selectBackwardSexp",
        "key": "ctrl+shift+left",
        "mac": "alt+shift+left",
        "when": "editorTextFocus && editorLangId == scheme"
      },
      {
        "command": "beguile.eval",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus && editorLangId == scheme"
      }
    ],
    "configurationDefaults": {
      "[scheme]": {
        "editor.defaultFormatter": "GigiaJ.beguile",
        "editor.formatOnSave": true,
        "editor.wordSeparators": "`()[]{}|;\\\",'"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npx shadow-cljs release extension",
    "watch": "npx shadow-cljs watch extension",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.96.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "shadow-cljs": "^3.3.5",
    "tree-sitter-cli": "^0.26.3"
  },
  "dependencies": {
    "web-tree-sitter": "^0.26.3",
    "ws": "^8.19.0"
  }
}